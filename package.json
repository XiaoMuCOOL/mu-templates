{
  "name": "{{ projectName }}",
  "description": "{{ description }}",
  "version": "0.0.1",
  "author": "{{ author }}",
  "scripts": {
    "prestart": "npm run lint && npm run lintcss",
    "start": "cross-env NODE_ENV=dev webpack-dev-server --open",
    "predev": "npm run prestart",
    "dev": "cross-env NODE_ENV=dev webpack",
    "prebuild": "npm run prestart",
    "build": "cross-env NODE_ENV=prod webpack",
    "lint": "standard --fix & standard --verbose | snazzy",
    "lintcss": "stylelint --fix src/css/**.css"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.3.1",
    "jquery": "^3.2.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "standard": {
    "globals": [
      "$",
      "JQuery",
      "Config",
      "Tools",
      "alert"
    ],
    "ignore": [
      "src/vendor/**.js",
      "node_modules/**.js",
      "dist/js/**.js"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "src/css/normalize.css"
    ],
    "fix": true,
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extends",
            "ignores",
            "for",
            "if",
            "else",
            "mixin",
            "content"
          ]
        }
      ],
      "unit-whitelist": [
        "rem",
        "%"
      ]
    }
  },
  "browserslist": [
    "Android > 4.1",
    "ios > 9",
    "> 1%",
    "last 2 versions"
  ],
  "readme": "ERROR: No README data found!"
}
